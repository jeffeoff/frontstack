{
  "name": "frontstack",
  "description": "Simple front-end SASS compilation and JS bundling.",
  "author": "Jeff Eoff",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "2.11.0",
    "eslint": "^8.56.0",
    "parcel": "^2.9.1",
    "parcel-resolver-ignore": "^2.1.5",
    "prettier": "^2.8.3",
    "sass": "^1.62.1",
    "stylelint": "^16.2.1",
    "stylelint-scss": "^6.1.0"
  },
  "dependencies": {
    "jquery": "^4.0.0-beta",
    "lodash": "^4.17.21"
  },
  "scripts": {
    "format": "npm run format:js && npm run format:scss",
    "format:js": "npx prettier --write js/",
    "format:scss": "npx prettier --write scss/",
    "lint-sass": "npx stylelint scss/**/*.scss",
    "lint-js": "npx eslint js/main.js js/lib/**/*.js js/components/**/*.js",
    "lint": "npm run lint-sass && npm run lint-js",
    "watch": "parcel watch --no-hmr --no-autoinstall",
    "raw": "parcel build --no-optimize",
    "build": "npm run lint && parcel build --no-optimize",
    "prod": "npm run format && npm run lint && parcel build --no-source-maps --detailed-report"
  },
  "targets": {
    "main": false,
    "css": {
      "source": "./scss/main.scss",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    },
    "js": {
      "source": "./js/main.js",
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    },
    "default": {
      "distDir": "./dist"
    }
  },
  "parcelIgnore": [
    "dist/*.*",
    "js/vendor/*.*"
  ],
  "engines": {
    "node": ">= 18"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/dist/*.js",
      "**/vendor/*.js"
    ]
  }
}
